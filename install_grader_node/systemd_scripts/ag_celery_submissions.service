# sudo systemctl start <name of this file> 

[Unit]
Description=Start the celery submission processing worker 

[Service]
ExecStart=/usr/local/bin/celery -A autograder worker -Q submissions -n submissions@%h --loglevel=info -n 1
Restart=always
User=jameslp
EnvironmentFile=/home/jameslp/autograder-server/install_grader_node/environment_vars
WorkingDirectory=/home/jameslp/autograder-server

[Install]
WantedBy=multi-user.target

